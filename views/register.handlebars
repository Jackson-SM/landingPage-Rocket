<div class="d-flex flex-column justify-content-center align-items-center" id="formdiv">
    {{#if message}}
        <p class="alert alert-danger">{{message}}</p>
    {{/if}}
    <div class="d-flex align-items-center justify-content-center h-75 w-75 container-pai">
        <div class="box-one column-content text-light h-100 w-75 text-center text-break d-flex flex-column justify-content-center align-items-center">
            <h1 class="my-5">Login</h1>
            <p>JÃ¡ tem uma conta? Entre aqui.</p>
            <a href="/login" class="btn btn-outline-light my-2">Fazer Login</a>
        </div>
        <div class="box-two h-100 w-100 overflow-auto d-flex flex-column justify-content-center">
            <form action="/confirm" method="POST" class="d-flex flex-column align-items-center w-100 h-100 my-3">
                <img src="https://img.icons8.com/ios-filled/500/fa314a/launchpad.png" width="140" height="140"/>
                <h3 class="logologin">Rocket</h3>
                <input type="text" name="login" placeholder="Login" class="input my-2 bg-dark text-light">
                <input type="email" name="email" placeholder="Email" class="input my-2 bg-dark text-light">
                <input type="text" name="name" placeholder="Nome" class="input my-2 bg-dark text-light">
                <input type="password" name="password" placeholder="Senha" class="input my-2 bg-dark text-light">
                <button type="submit" class="btnAnimate">Registrar</button>
            </form>
        </div>
    </div>
</div>


